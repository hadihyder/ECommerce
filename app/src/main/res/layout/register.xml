<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/regbg"
    tools:context=".Register">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



    <TextView
        android:id="@+id/textView3"
        android:textColor="@color/colorYellow"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:drawableLeft="@drawable/ic_action_down"
        android:drawableRight="@drawable/ic_action_down"
        android:text="Register Here"
        android:textSize="30dp"
        android:textAlignment="center"
       />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18dp"
        android:hint="Name" />

    <EditText
        android:id="@+id/editTextMobileNo"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="18dp"
        android:layout_below="@+id/editTextName"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Mobile Number" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="18dp"
        android:layout_below="@+id/editTextMobileNo"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email-id"
        android:autofillHints="" />

    <EditText
        android:id="@+id/editTextPassword_Register"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:ems="10"
        android:layout_below="@+id/editTextEmail"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:inputType="textPassword"
        android:hint="Password"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/buttonRegister"
            android:layout_below="@id/editTextPassword_Register"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="110dp"/>

